---
import { blackA } from "@radix-ui/colors";
export type NewsItem = {
  date: string;
  title: string;
  link?: string;
  authors: string[];
};
interface Props {
  news: NewsItem[];
}
const { news } = Astro.props;
const ary = [1, 2, 3, 4, 5];
---

<div
  style={{
    display: "flex",
    flexDirection: "column",
    gap: "1rem",
  }}
>
  {
    news.map((news, i) => (
      <div
        style={{
          display: "flex",
          flexDirection: "row",
          gap: "1em",
          rowGap: "1em",
        }}
      >
        <div>{news.date}</div>
        <div
          style={{
            display: "flex",
            flexDirection: "column",
            gap: "0.25rem",
          }}
        >
          <div>
            <p
              style={{
                fontSize: "0.875rem",
                fontWeight: "bold",
                color: blackA.blackA9,
              }}
            >
              {news.title}
            </p>
          </div>
          {news.link && (
            <div>
              <a
                href={news.link}
                style={{
                  fontSize: "0.875rem",
                  color: blackA.blackA9,
                }}
              >
                {news.link}
              </a>
            </div>
          )}
          {false && (
            <div>
              <div
                style={{
                  display: "flex",
                  flexDirection: "row",
                  fontSize: "0.875rem",
                  gap: "0.5rem",
                  color: blackA.blackA9,
                }}
              >
                {news.authors.map((author, i) => (
                  <div>{author}</div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    ))
  }
</div>
