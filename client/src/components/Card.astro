---
interface Props {
  title: string;
  body: string;
  href: string;
  imgSrc?: string;
  imgAlt?: string;
  imgWidth?: number;
  imgHeight?: number;
}

const { href, title, body,
  imgSrc, imgAlt = "",
  imgWidth = 72, imgHeight = 72,
} = Astro.props;
---

<li class="link-card">
  <a class="card-inner" href={href}>
    {imgSrc && (
      <img
        class="thumb"
        src={imgSrc}
        alt={imgAlt}
        width={imgWidth}
        height={imgHeight}
        loading="lazy"
        decoding="async"
      />
    )}
    <div class="text">
      <h2>
        {title}
        <span>&rarr;</span>
      </h2>
      <p>{body}</p>
    </div>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    border: 1px solid rgba(100, 100, 100, 0.1);
  }

  .card-inner {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    background-color: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(10px);
    color: #000;
  }

  .thumb {
    flex: 0 0 auto;
    width: auto;
    height: auto;
    max-width: 96px;
    border-radius: 8px;
    object-fit: cover;
  }

  .text {
    flex: 1 1 auto;
    min-width: 0;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-color: rgba(255, 255, 255, 0.85);
    background-image: var(--accent-gradient);
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }

  @media (max-width: 560px) {
    .card-inner {
      flex-direction: column;
      align-items: flex-start;
    }
    .thumb {
      max-width: 100%;
      width: 100%;
      height: auto;
    }
  }
</style>