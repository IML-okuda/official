      />
    </section>
  </main>
</Layout>

<style>
  .link-container {
    text-align: right;
    margin-top: 1.5rem;
  }

  .more-link {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #f5f5f5;
    color: #333;
    text-decoration: none;
    border-radius: 6px;
    transition: background-color 0.2s;
  }

  .more-link:hover {
    background-color: #e0e0e0;
  }

  .sub-title {
  display: flex;
  align-items: center;
  gap: .5rem;
  margin: 1.25rem 0 .75rem;
  font-size: 1.3rem;
  font-weight: 600;
  color: #222;
  line-height: 1.25;
  position: relative;
  padding-left: .75rem;
  }

  /* サブセクションの左側のバー */
  .sub-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: .15em;
  bottom: .15em;
  width: .25rem;
  border-radius: 2px;
  background: var(--accent-color, #6b93ff);
  }

  .sub-title.pinned { --accent-color: #ff7a59; }
  .sub-title.normal { --accent-color: #a061ff; }
</style>